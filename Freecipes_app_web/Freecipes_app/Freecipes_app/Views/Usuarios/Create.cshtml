@model Freecipes_app.Models.Usuario

@{
    ViewData["Title"] = "Create";
}

<h2 class="text-center">Criar uma conta</h2>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" style="border-radius:30px" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" style="border-radius:30px" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" style="border-radius:30px" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <div class="btn-group" role="group">
                    <input type="submit" value="criar conta" class="btn btn-danger" style="border-radius:30px; font-size:2vh;  min-width: 120px; font-weight:bold;margin:10px" />
                    <a class="btn btn-light" style="border-radius:30px; font-size:2vh; font-weight:bold; margin:10px;color:white;  min-width: 120px;background-color:wheat" asp-controller="Home" asp-action="Index">entrar</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
